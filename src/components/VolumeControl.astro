---
// Volume control component for playback bar
import Icon from './Icon.astro';
---

<div class="flex items-center justify-end gap-4">
  <!-- Queue Icon -->
  <button
    class="text-gray-400 hover:text-white transition-colors"
    aria-label="Queue"
  >
    <Icon name="list" class="w-5 h-5" />
  </button>

  <!-- Devices Icon -->
  <button
    class="text-gray-400 hover:text-white transition-colors"
    aria-label="Connect to a device"
  >
    <Icon name="monitor" class="w-5 h-5" />
  </button>

  <!-- Volume Slider -->
  <div class="flex items-center gap-2 w-32">
    <button
      class="text-gray-400 hover:text-white transition-colors"
      aria-label="Mute"
    >
      <Icon name="volume-2" class="w-5 h-5" />
    </button>
    <div class="flex-1 h-1 bg-gray-600 rounded-full overflow-hidden group cursor-pointer">
      <div
        class="h-full bg-white group-hover:bg-spotify-green transition-colors"
        style="width: 70%"
      ></div>
    </div>
  </div>

  <!-- Fullscreen Icon -->
  <button
    class="text-gray-400 hover:text-white transition-colors"
    aria-label="Fullscreen"
  >
    <Icon name="maximize" class="w-5 h-5" />
  </button>
</div>
