---
// Track information component for playback bar
import Icon from './Icon.astro';
---

<div class="flex items-center gap-2 md:gap-4 min-w-0">
  <!-- Album Thumbnail (smaller on mobile) -->
  <img
    src="https://picsum.photos/56/56?random=1"
    alt="Album art"
    class="w-10 h-10 md:w-14 md:h-14 rounded"
  />

  <!-- Song Info -->
  <div class="min-w-0 flex-1">
    <div class="text-xs md:text-sm font-semibold truncate hover:underline cursor-pointer">
      Blinding Lights
    </div>
    <!-- Artist name: hidden on mobile -->
    <div class="text-xs text-gray-400 truncate hover:underline hover:text-white cursor-pointer hidden sm:block">
      The Weeknd
    </div>
  </div>

  <!-- Like Button: hidden on mobile -->
  <button
    class="text-gray-400 hover:text-white transition-colors hidden sm:block"
    aria-label="Like song"
  >
    <Icon name="heart" class="w-5 h-5" />
  </button>
</div>
