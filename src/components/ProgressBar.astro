---
// Progress bar component for track playback
---

<div class="flex items-center gap-2 text-xs text-gray-400">
  <!-- Current Time -->
  <span class="w-10 text-right">1:23</span>

  <!-- Progress Track -->
  <div class="flex-1 h-1 bg-gray-600 rounded-full overflow-hidden group cursor-pointer">
    <!-- Progress Fill -->
    <div
      class="h-full bg-white group-hover:bg-spotify-green transition-colors relative"
      style="width: 35%"
    >
      <!-- Handle (visible on hover) -->
      <div
        class="absolute right-0 top-1/2 w-3 h-3 bg-white rounded-full transform -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity shadow-lg"
      >
      </div>
    </div>
  </div>

  <!-- Total Time -->
  <span class="w-10">3:45</span>
</div>
